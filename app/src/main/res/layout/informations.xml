<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/back">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alex_brush"
        android:text="Add your informations"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="120dp"
        android:background="@color/colorTextIcons"
        android:hint="Enter your name"
        android:padding="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationEditText"
        android:color="@color/colorTextIcons"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="120dp"
        android:padding="5dp"
        android:hint="Enter location"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bloodTextView"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="Add your blood type:"
        android:layout_centerHorizontal="true"


        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>
    <Button
        android:id="@+id/addInfos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="136dp"
        android:background="@color/colorPrimaryText"
        android:textColor="@color/colorTextIcons"
        android:textSize="25sp"
        android:text="Add" />

</LinearLayout>